<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/global"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/avatar_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="登录/注册"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_my_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:drawableLeft="@mipmap/yonghuguanli"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="用户管理"
        android:textColor="@color/text_black"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_my_kefu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/kefu"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="联系客服"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_my_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/about_us"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="关于我们"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_my_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/exit"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="退出"
        android:textColor="@color/text_black"
        android:textSize="16sp" />


</LinearLayout>
