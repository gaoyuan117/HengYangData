<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jzbwlkj.hengyangdata.ui.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.jzbwlkj.hengyangdata.view.AlphaTabsIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#e4e5e6"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.jzbwlkj.hengyangdata.view.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tabIconNormal="@mipmap/shouye_false"
            app:tabIconSelected="@mipmap/shouye_true"
            app:tabText="首页"
            app:textColorNormal="#464646"
            app:textColorSelected="@color/global" />

        <com.jzbwlkj.hengyangdata.view.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tabIconNormal="@mipmap/order_false"
            app:tabIconSelected="@mipmap/order_true"
            app:tabText="订单"
            app:textColorNormal="#464646"
            app:textColorSelected="@color/global" />

        <com.jzbwlkj.hengyangdata.view.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tabIconNormal="@mipmap/wode_false"
            app:tabIconSelected="@mipmap/wode_true"
            app:tabText="我的"
            app:textColorNormal="#464646"
            app:textColorSelected="@color/global" />

    </com.jzbwlkj.hengyangdata.view.AlphaTabsIndicator>

</LinearLayout>
